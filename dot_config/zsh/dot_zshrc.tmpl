#!/bin/zsh
# Enable colors and change prompt:
autoload -U colors && colors	# Load colors
autoload -Uz add-zsh-hook vcs_info
setopt autocd		# Automatically cd into typed directory.
setopt interactive_comments
setopt correct
stty stop undef		# Disable ctrl-s to freeze terminal.

# Load aliases and shortcuts if existent.
source "${XDG_CONFIG_HOME:-$HOME/.config}/shell/aliasrc" 2>/dev/null
source "${XDG_CONFIG_HOME:-$HOME/.config}/zsh/aliasrc" 2>/dev/null
source "${XDG_CONFIG_HOME:-$HOME/.config}/shell/functionrc" 2>/dev/null
typeset -gx lbal

# Basic auto/tab complete:
autoload -Uz compinit
zstyle ':completion:*' menu select
_comp_options+=(globdots)
source ~/.local/share/zsh/plugins/fzf-tab/fzf-tab.plugin.zsh
fpath=(~/.local/share/zsh/plugins/zsh-completions/src $fpath)
compinit

# vi mode
bindkey -v
export KEYTIMEOUT=1

# Completion for kitty
kitty + complete setup zsh | source /dev/stdin

# Edit line in vim with ctrl-e:
autoload edit-command-line; zle -N edit-command-line
bindkey '^e' edit-command-line

# Command Not Found Handler
function command_not_found_handler() 
    {
    if [ -x /usr/lib/command-not-found ]; then
        /usr/lib/command-not-found -- "$1";
        return $?;
    else
        if [ -x /usr/share/command-not-found/command-not-found ]; then
            /usr/share/command-not-found/command-not-found -- "$1";
            return $?;
        else
            printf "%s: command not found\n" "$1" 1>&2;
            return 127;
        fi;
    fi
    }

eval "$(zoxide init zsh)"
# fzf integration
eval "$(fzf --zsh)"

# starship prompt
eval "$(starship init zsh)"

# Load syntax highlighting; should be last.
{{ if eq .chezmoi.osRelease.id "arch" -}}
source /usr/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh 2>/dev/null
source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh 2>/dev/null
{{ end -}}
{{ if eq .chezmoi.osRelease.id "debian" -}}
source /usr/share/zsh/zsh-autosuggestions.zsh 2>/dev/null
source /usr/share/zsh/zsh-syntax-highlighting.zsh 2>/dev/null
{{ end -}}
{{ if eq .chezmoi.osRelease.id "fedora" "fedora-asahi-remix" -}}
source /usr/share/zsh-autosuggestions/zsh-autosuggestions.zsh 2>/dev/null
source /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh 2>/dev/null
{{- end }}

verseoftheday | fmt -su
